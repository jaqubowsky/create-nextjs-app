{
  "name": "nextjs-template-app",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others --names \"FE,DB\" --prefix-colors \"blue,yellow\" \"npm run next:dev\" \"npm run db:studio\"",
    "next:dev": "next dev --turbopack",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "npm run db:generate && npx drizzle-kit migrate",
    "db:migrate:prod": "tsx scripts/migrate-production.ts",
    "db:studio": "npx drizzle-kit studio",
    "db:reset": "tsx scripts/reset.ts",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "npx @biomejs/biome lint",
    "lint:fix": "npx @biomejs/biome check --write --no-errors-on-unmatched --files-ignore-unknown=true",
    "bump-deps": "npx ncu -u --target minor",
    "commitlint": "commitlint --edit",
    "commit": "cz"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@phosphor-icons/react": "^2.1.10",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@react-email/components": "^0.5.0",
    "@react-email/render": "^1.2.0",
    "@sentry/nextjs": "^10.5.0",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.3.5",
    "drizzle-orm": "^0.44.4",
    "next": "^15.4.6",
    "next-safe-action": "^8.0.8",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-email": "^4.2.8",
    "react-hook-form": "^7.62.0",
    "sonner": "^2.0.7",
    "stripe": "^18.4.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^24.2.1",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "lefthook": "^1.12.3",
    "release-please": "^17.1.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.4",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5"
  },
  "overrides": {
    "esbuild": "0.25.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
